  },
  "type": "module",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "fake-indexeddb": "^6.2.5",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
